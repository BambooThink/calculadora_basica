<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C9F9C"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_operation_main"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="textEnd"
                android:textColor="#FFD193"
                android:textColorHint="#FFD193"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/text_result_main"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:hint="Resultado"
                android:textColor="#004441"
                android:textColorHint="#004441"
                android:textSize="34sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_9_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="9"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_8_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="8"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_7_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="7"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_factor_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="x"
                        android:textAllCaps="false"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_6_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="6"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_5_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="5"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_4_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="4"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_division_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="รท"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_3_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="3"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_2_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="2"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_1_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="1"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_suma_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="+"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_c_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="c"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_0_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="0"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_igual_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="="
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_resta_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="#6B257E"
                        android:text="-"
                        android:textSize="24sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>